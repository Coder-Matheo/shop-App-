<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="12dp"
            android:backgroundTint="@color/black"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/fran1">

            </ImageView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >

            <TextView
                android:id="@+id/title_detail_item_row_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hallo world"
                android:textSize="28dp"
                android:textAppearance="@style/MaterialAlertDialog.Material3.Title.Text"
                android:textAlignment="textStart"

                />

            <TextView
                android:id="@+id/desc_detail_item_row_text"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:text="Hallo world this is a color of"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18dp"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                >

                <LinearLayout
                    android:id="@+id/color1id"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/rounded_color_shape"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/color2id"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/rounded_color_shape"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/color3id"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/rounded_color_shape"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/color4id"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/rounded_color_shape"
                    android:orientation="horizontal" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>