<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="15dp">
            <LinearLayout
                android:id="@+id/linearLayout_horizontal_item"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@color/purple_700">
                <ImageView
                    android:id="@+id/image_row_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/fran1"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/name_of_song_underbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/price_of_under_box"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#2D2D2D"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/price_of_under_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$669"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textAlignment="textStart"/>



    </LinearLayout>
</LinearLayout>